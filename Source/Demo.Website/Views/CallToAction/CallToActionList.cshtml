@model ICallToActionListModel
<div>
	@if (Model.Header != null)
	{
		<h3>@Model.Header.Phrase</h3>
	}
	@foreach (var callToAction in Model.CallToActions)
	{
		<div class="callToAction">
			@callToAction.Image.Render(new { @class = "dynamic", crop = 1, data_meta = "Image" })
			<div class="inner">
				<h3 class="title">@callToAction.Title</h3>
				<div class="body">
					@callToAction.Body
				</div>
				<div class="datetime">
					@callToAction.DateAndTime
				</div>
			</div>
			<div class="link">
				<a href="@callToAction.GenerateUrl()">@callToAction.DisplayName</a>
			</div>
		</div>
	}
</div>